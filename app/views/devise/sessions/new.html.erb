<%= render "devise/navbar" %>

<div class="row text-white" id="login_form">
  <div class="col-12 col-md-4 mx-auto">
    <h2 class="h3 mb-5 text-center">Ingresar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-control-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Iniciar SesiÃ³n", class: "btn btn-warning btn-block mt-3 b-radius-50" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
